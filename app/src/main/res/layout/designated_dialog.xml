<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_first_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/smallPadding"
        android:paddingBottom="@dimen/smallPadding"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="@dimen/textMedium"/>
    <TextView
        android:id="@+id/dialog_first_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallPadding"
        android:paddingLeft="@dimen/settingPadding"
        android:textSize="@dimen/textMedium"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/settingPadding"
            android:textSize="@dimen/textMedium"
            android:textColor="@color/black"
            android:text="平均 "
            android:paddingBottom="@dimen/settingPadding"/>
        <TextView
            android:id="@+id/dialog_first_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textMedium"
            android:textColor="@color/dark_yellow"
            android:paddingBottom="@dimen/settingPadding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/settingPadding"
            android:textSize="@dimen/textMedium"
            android:textColor="@color/black"
            android:text="總分 "
            android:paddingBottom="@dimen/settingPadding"/>
        <TextView
            android:id="@+id/dialog_first_all_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textMedium"
            android:textColor="@color/dark_yellow"
            android:paddingBottom="@dimen/settingPadding"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/settingPadding"
            android:textSize="@dimen/textMedium"
            android:textColor="@color/black"
            android:text="    人數 "
            android:paddingBottom="@dimen/settingPadding"/>

        <TextView
            android:id="@+id/dialog_first_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textMedium"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/settingPadding"/>
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_second_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/smallPadding"
        android:paddingBottom="@dimen/smallPadding"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="@dimen/textMedium"/>
    <TextView
        android:id="@+id/dialog_second_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/smallPadding"
        android:paddingLeft="@dimen/settingPadding"
        android:textSize="@dimen/textMedium"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_second_balance_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/settingPadding"
            android:textSize="@dimen/textMedium"
            android:textColor="@color/black"
            android:text="平均 "
            android:paddingBottom="@dimen/settingPadding"/>
        <TextView
            android:id="@+id/dialog_second_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textMedium"
            android:textColor="@color/dark_yellow"
            android:paddingBottom="@dimen/settingPadding"/>

        <TextView
            android:id="@+id/dialog_second_all_grade_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/settingPadding"
            android:textSize="@dimen/textMedium"
            android:textColor="@color/black"
            android:text="總分 "
            android:paddingBottom="@dimen/settingPadding"/>
        <TextView
            android:id="@+id/dialog_second_all_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textMedium"
            android:textColor="@color/dark_yellow"
            android:paddingBottom="@dimen/settingPadding"/>

        <TextView
            android:id="@+id/dialog_second_people_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/settingPadding"
            android:textSize="@dimen/textMedium"
            android:textColor="@color/black"
            android:text="    人數 "
            android:paddingBottom="@dimen/settingPadding"/>

        <TextView
            android:id="@+id/dialog_second_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textMedium"
            android:textColor="@color/black"
            android:paddingBottom="@dimen/settingPadding"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/favorite_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="end"
        android:background="@drawable/ic_favorite_border"
        android:layout_marginBottom="@dimen/settingPadding"
        android:layout_marginRight="@dimen/settingPadding"
        android:backgroundTint="@color/pink"/>

</LinearLayout>